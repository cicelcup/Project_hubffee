<resources>

    <!-- Base application theme. First Combination -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_1_Primary</item>
        <item name="colorPrimaryDark">@color/color_1_primary_Dark</item>
        <item name="colorAccent">@color/color_1_Secondary</item>
        <item name="android:buttonStyle">@style/ButtonColor_1</item>
        <item name="actionBarStyle">@style/ActionBarStyle_1</item>
        <item name="android:textColor">@color/color_1_Secondary</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
    </style>

<!--    Button style. First Combination-->
    <style name="ButtonColor_1" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/color_1_Secondary_Text</item>
        <item name="android:background">@drawable/btn_rounded_1</item>
    </style>

<!-- Action Bar Style. First Combination    -->
    <style name="ActionBarStyle_1" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/ActionBarTitleTextStyle_1</item>
        <item name="background">@color/color_1_Primary</item>
    </style>

    <style name="ActionBarTitleTextStyle_1" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/color_1_Primary_Text</item>
    </style>

